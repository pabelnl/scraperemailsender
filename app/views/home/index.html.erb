<!DOCTYPE html>
<html>
<style media="screen">

html,body {
  width: 100%;
  height: 100%;
}
h1{
  color: slategrey;
}
.main-container{
  text-align: center;
  height: 12em;
  top: 5em;
  margin: 5em auto auto auto;
  width: 26em;
  border-style: solid;
  border-color: skyblue;
  border-radius: 10px;
}
.login input{
  display: block;
  margin: 10px auto auto auto;
}
.login input[type=submit]{
  width: 100px;
      background-color: cornflowerblue;
      color: white;
      padding: 14px 20px;
      margin: 10px auto auto auto;
      border: none;
      border-radius: 4px;
      cursor: pointer;
}
</style>
<body>
  <div class="main-container">
    <h1>Nueva Casa RD Login</h1>
    <% if @failed_login != ""%>
      <p><%= @failed_login %></p>
    <% end %>
    <form class="login" action="/login" method="post">
      <input type="text" name="username" value="" placeholder="username">
      <input type="password" name="password" value="" placeholder="password">
      <input type="submit" name="submit" value="Login">
    </form>
  </div>
</body>
</html>
